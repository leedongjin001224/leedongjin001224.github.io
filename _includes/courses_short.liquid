{% if course.redirect %}
  {% assign link = course.redirect %}
{% else %}
  {% assign link = course.url | relative_url %}
{% endif %}

<div style="width: 95%;">
<h3 style="margin-bottom: 0.05em; font-size: medium; font-weight: bolder"><a href="{{ link }}">{{ course.code }}: {{ course.title }}</a></h3>
<p style="margin-bottom: 0.05em">{{ course.position }} at {{ course.location }}</p>
<p>{% for time in course.times %}{{ time }}{% unless forloop.last %} / {% endunless %}{% endfor %}</p>
</div>
