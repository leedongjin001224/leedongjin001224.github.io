{% if course.redirect %}
  {% assign link = course.redirect %}
{% else %}
  {% assign link = course.url | relative_url %}
{% endif %}

<a href="{{ link }}" style="width: 95%;">
  <div class="card" style="margin-bottom: 2em;">
    <div class="card-body">
      <img class="float-right" style="max-height: 128px; width: auto;" src="{{ course.img | relative_url }}" />
      <h3 class="card-title" style="margin-bottom: 0.05em;" >{{ course.code }}</h3>
      <p class="card-text" style="margin-bottom: 0.05em; font-size: medium; font-weight: bolder">{{ course.title }}</p>
      <p class="card-text" style="margin-bottom: 0.05em; font-size: medium; font-weight: lighter"><b>{{ course.position }}</b> at <b>{{ course.location }}</b></p>
      <p class="card-text" style="margin-bottom: 0.15em; font-size: medium; font-weight: lighter">{% for time in course.times %}<b>{{ time }}</b>{% unless forloop.last %} / {% endunless %}{% endfor %}</p>
      <div class="row ml-1 mr-1 p-0">
        {% if course.github %}
          <div class="github-icon">
            <div class="icon" data-toggle="tooltip" title="Code Repository">
              <a href="{{ course.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
            </div>
            {% if course.github_stars %}
              <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                <i class="fa-solid fa-star"></i>
                <span id="{{ course.github_stars }}-stars"></span>
              </span>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</a>