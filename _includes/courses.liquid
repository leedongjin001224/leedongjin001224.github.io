{% if course.redirect %}
  {% assign link = course.redirect %}
{% else %}
  {% assign link = course.url | relative_url %}
{% endif %}

<div style="width: 95%; display: flex; flex-direction: column; margin-bottom: 1em;">
  <div style="display: flex; justify-content: space-between; align-items: baseline;">
    <h3 style="margin: 0; font-size: medium; font-weight: bolder;">
      <a href="{{ link }}">{{ course.code }}: {{ course.title }}</a>
    </h3>
    <p style="margin: 0;">
      {% for time in course.times %}{{ time }}{% unless forloop.last %} / {% endunless %}{% endfor %}
    </p>
  </div>
  <div style="margin-top: 0em;">
    <p style="margin: 0;">{{ course.position }} at {{ course.location }}</p>
  </div>
</div>
